{
  "name": "west-africa-ecommerce-platform",
  "version": "1.0.0",
  "description": "E-commerce platform for West Africa with local payment methods",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run start:prod",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "db:up": "docker-compose up -d postgres redis",
    "db:down": "docker-compose down",
    "db:migrate": "cd backend && npm run migration:run",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "keywords": [
    "ecommerce",
    "west-africa",
    "mali",
    "cote-divoire",
    "burkina-faso",
    "mobile-money",
    "nestjs",
    "nextjs",
    "typescript"
  ],
  "author": "West Africa E-commerce Team",
  "license": "MIT"
}