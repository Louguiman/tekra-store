# Dokploy Environment Configuration
# Copy this file to .env and update the values for your deployment

# Application Environment
NODE_ENV=production
BUILD_TARGET=production

# Database Configuration
POSTGRES_DB=ecommerce_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Backend Configuration
BACKEND_PORT=3001
JWT_SECRET=change-this-to-a-very-secure-random-string-for-production
JWT_EXPIRES_IN=7d
MAX_FILE_SIZE=5242880

# Frontend Configuration
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXT_PUBLIC_APP_URL=https://your-domain.com
FRONTEND_URL=https://your-domain.com

# Nginx Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Payment Provider API Keys (Optional)
ORANGE_MONEY_API_KEY=
WAVE_API_KEY=
MOOV_API_KEY=
CARD_PAYMENT_API_KEY=

# Production Security Notes:
# 1. Change POSTGRES_PASSWORD to a strong password
# 2. Generate a secure JWT_SECRET (at least 32 characters)
# 3. Update domain URLs to your actual domain
# 4. Add real payment provider API keys if needed
# 5. Consider using Docker secrets for sensitive data